
<%= form_for ([@post, @post.comments.build]) do |f| %>
	<p>
	<%= f.label :name %><br>
	<%= f.text_field :name %>
	</p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>

	<% if @post.errors.any? %>
		<%= pluralize(@post.errors.count, 'error') %>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
		</ul>
	<% end %>
<%= f.submit %>
<% end %>