<%= form_for :post, url: posts_path do |f| %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>

	<% if @post.errors.any? %>
		<%= pluralize(@post.errors.count, 'error') %>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
		</ul>
	<% end %>
<%= f.submit %>
<% end %>